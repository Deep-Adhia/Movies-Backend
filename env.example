# Movie Search Backend Environment Variables
# Copy this file to .env and fill in your actual values

# TMDb API Configuration
TMDB_API_KEY=your_tmdb_api_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration (for production)
# Update these URLs with your actual frontend domains after deployment
FRONTEND_URL_VERCEL=https://your-frontend-domain.vercel.app
FRONTEND_URL_NETLIFY=https://your-frontend-domain.netlify.app

# Optional: Logging
LOG_LEVEL=info
